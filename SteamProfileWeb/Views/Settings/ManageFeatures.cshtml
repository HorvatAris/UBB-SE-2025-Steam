@model Dictionary<string, List<BusinessLayer.Models.Feature>>

<div class="container d-flex flex-column align-items-center" style="min-height: 70vh;">
    <a asp-action="Index" class="btn btn-link mb-3 align-self-start">Go Back</a>
    <h2 class="mb-4">Available Features</h2>
    <div class="w-100" style="max-width: 700px;">
        @foreach (var category in Model)
        {
            <div class="mb-4">
                <h4 class="mb-3">@category.Key</h4>
                <div class="row g-4">
                    @foreach (var feature in category.Value)
                    {
                        <div class="col-12 col-md-6 col-lg-4 d-flex flex-column align-items-center">
                            <img src="@feature.Source" alt="@feature.Description" class="img-fluid mb-2 border rounded" style="width:100px; height:100px; object-fit:cover;" />
                            <div class="text-center">
                                <span class="fw-semibold">@feature.Description</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
