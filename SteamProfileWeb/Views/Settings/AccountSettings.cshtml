@model SteamProfileWeb.ViewModels.AccountSettingsViewModel

<div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 70vh;">
    <a asp-action="Index" class="btn btn-link mb-3">Go Back</a>
    <h2 class="mb-4">Account Settings</h2>
    <form asp-action="AccountSettings" method="post" class="w-100" style="max-width: 400px;">
        <div class="mb-3 d-flex align-items-center gap-2">
            <label class="form-label mb-0 flex-shrink-0" style="min-width:90px;">Username</label>
            <input asp-for="Username" class="form-control rounded-pill" autocomplete="off" />
            <button type="submit" name="action" value="UpdateUsername" class="btn btn-primary ms-2">Update</button>
        </div>
        <div class="mb-3 d-flex align-items-center gap-2">
            <label class="form-label mb-0 flex-shrink-0" style="min-width:90px;">Email</label>
            <input asp-for="Email" class="form-control rounded-pill" autocomplete="off" />
            <button type="submit" name="action" value="UpdateEmail" class="btn btn-primary ms-2">Update</button>
        </div>
        <div class="mb-3 d-flex align-items-center gap-2">
            <label class="form-label mb-0 flex-shrink-0" style="min-width:90px;">Password</label>
            <input asp-for="Password" type="password" class="form-control rounded-pill" autocomplete="new-password" />
            <button type="submit" name="action" value="UpdatePassword" class="btn btn-primary ms-2">Update</button>
        </div>
        <div class="mb-3">
            <button type="submit" name="action" value="DeleteAccount" class="btn btn-danger w-100">Delete Account</button>
        </div>
        <div>
            <button type="submit" name="action" value="Logout" class="btn btn-secondary w-100">Log out</button>
        </div>
    </form>
</div>
