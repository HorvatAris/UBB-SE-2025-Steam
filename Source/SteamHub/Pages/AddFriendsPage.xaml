<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteamHub.Pages.AddFriendsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls" xmlns:viewmodels="using:SteamHub.ViewModels" d:DataContext="{d:DesignInstance Type=viewModels1:AddFriendsViewModel}"
    mc:Ignorable="d"
    xmlns:utils="using:SteamHub.Utils"
    xmlns:models1="using:SteamHub.ApiContract.Models"
    xmlns:viewModels1="using:SteamHub.ViewModels"
    x:Name="PageRoot"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <utils:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <utils:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter"/>
        <utils:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Back to Profile Button -->
        <Button Grid.Row="0"
        Content="Back to Profile"
        Click="BackToProfileButton_Click"
        Style="{StaticResource AccentButtonStyle}"
        HorizontalAlignment="Left"
        Margin="20"/>
        <!-- Title -->
        <TextBlock Grid.Row="1" 
                  Text="DISCOVER FRIENDS" 
                  FontSize="30" 
                  FontWeight="Bold" 
                  TextAlignment="Center"
                  Margin="20"/>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Center"
                        Padding="20">
                <!-- Friends List -->
                <ItemsControl ItemsSource="{Binding PossibleFriendships}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <controls:WrapPanel Orientation="Horizontal" MaxWidth="680"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models1:PossibleFriendship">
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8"
            Padding="12"
            Margin="12">
                                <StackPanel Spacing="12" Width="200">
                                    <!-- Profile Picture -->
                                    <Grid Height="170" Width="120" HorizontalAlignment="Center">
                                        <Image Source="{x:Bind User.ProfilePicture}"
                       Stretch="UniformToFill"
                       Height="120"
                       Width="120"/>
                                    </Grid>

                                    <!-- Username -->
                                    <TextBlock Text="{x:Bind User.Username}"
                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"/>

                                    <!-- IF NOT FRIEND -->
                                    <Button Content="Add Friend"
                    MinWidth="150"
                    Visibility="{Binding IsFriend, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                    Click="AddFriend_Click"
                    Tag="{x:Bind User.UserId}"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Center"/>

                                    <!-- IF FRIEND -->
                                    <StackPanel Orientation="Vertical"
                        Spacing="6"
                        Visibility="{Binding IsFriend, Converter={StaticResource BoolToVisibilityConverter}}"
                        HorizontalAlignment="Center">
                                        <Button Content="Already Friends"
                        MinWidth="150"
                        IsEnabled="False"
                        Style="{StaticResource AccentButtonStyle}"/>
                                        
                                        <Button Content="Remove Friend"
                        MinWidth="150"
                        Click="RemoveFriend_Click"
                        Tag="{x:Bind User.UserId}"
                        Style="{StaticResource AccentButtonStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>


                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Loading Indicator -->
        <ProgressRing Grid.Row="1"
                      IsActive="{Binding IsLoading}"
                      Width="50" 
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>

        <!-- Error Message -->
        <TextBlock Grid.Row="1"
                   Text="{Binding ErrorMessage}"
                   Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
    </Grid>
</Page>