<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Search.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Search"
    xmlns:viewmodels="using:Search"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=viewmodels:SearchViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/SearchBackground.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="15" Background="#22000000">
            <TextBlock Text="Search" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="Black"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <Grid Grid.Column="0" Margin="10">
                <Border CornerRadius="5" Background="#40000000" Padding="10">
                    <StackPanel Margin="10">
                        <Border CornerRadius="5" Padding="10" Background="#60000000">
                            <StackPanel Margin="0,0,0,20">
                                <!-- Search Row -->
                                <Grid VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{x:Bind ViewModel.SearchText, Mode=TwoWay}" 
                                             PlaceholderText="Enter username..." 
                                             Background="#40000000" 
                                             Foreground="White"
                                             Padding="10"
                                             Height="40"
                                             BorderThickness="0"/>
                                    <Button Grid.Column="1" 
                                            Content="Search" 
                                            Margin="5,0,0,0" 
                                            Background="Black" 
                                            Foreground="White"
                                            Padding="15,5"
                                            Height="40"
                                            BorderThickness="0"
                                            CornerRadius="3"
                                            Command="{x:Bind ViewModel.SearchCommand}"/>
                                </Grid>

                                <!-- Sort Row -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Sort" 
                                               VerticalAlignment="Center" 
                                               Foreground="Black"
                                               Margin="0,0,10,0"/>
                                    <StackPanel Grid.Column="1" 
                                                Orientation="Horizontal" 
                                                HorizontalAlignment="Right">
                                        <Button Content="A-Z" 
                                                Width="80" 
                                                Background="Black"
                                                Foreground="White"
                                                Margin="0,0,5,0"
                                                BorderThickness="0"
                                                CornerRadius="3"
                                                Command="{x:Bind ViewModel.SortAscendingCommand}"/>
                                        <Button Content="Z-A" 
                                                Width="80" 
                                                Background="Black" 
                                                Foreground="White"
                                                BorderThickness="0"
                                                CornerRadius="3"
                                                Command="{x:Bind ViewModel.SortDescendingCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Chat Invites -->
                        <Border CornerRadius="5" Padding="10" Background="#60000000" Margin="0,20,0,0">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Chat Invites" 
                                               FontWeight="Bold" 
                                               Foreground="Black"
                                               VerticalAlignment="Center"/>
                                    <Button Content="Refresh" 
                                            Grid.Column="1"
                                            Background="Black" 
                                            Foreground="White"
                                            Padding="10,5"
                                            BorderThickness="0"
                                            CornerRadius="3"
                                            Command="{x:Bind ViewModel.RefreshChatInvitesCommand}"/>
                                </Grid>

                                <ScrollViewer MaxHeight="200">
                                    <ItemsControl ItemsSource="{x:Bind ViewModel.ChatInvitesFromUsers, Mode=OneWay}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="local:User">
                                                <Border Background="#60000000" 
                                                        CornerRadius="3" 
                                                        Padding="10" 
                                                        Margin="0,0,0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{x:Bind UserName}"
                                                                   Foreground="White"
                                                                   VerticalAlignment="Center"
                                                                   Margin="10,0,0,0"
                                                                   Grid.Column="1"/>
                                                        <StackPanel Orientation="Horizontal" 
                                                                    Grid.Column="2"
                                                                    VerticalAlignment="Center">
                                                            <Button Content="Accept" 
                                                                    Background="Black" 
                                                                    Foreground="White"
                                                                    Padding="10,5"
                                                                    Margin="0,0,5,0"
                                                                    BorderThickness="0"
                                                                    CornerRadius="3"
                                                                    Click="AcceptChatInviteButton_Click"
                                                                    Tag="{x:Bind}"/>
                                                            <Button Content="Decline" 
                                                                    Background="Black" 
                                                                    Foreground="White"
                                                                    Padding="10,5"
                                                                    BorderThickness="0"
                                                                    CornerRadius="3"
                                                                    Click="DeclineChatInviteButton_Click"
                                                                    Tag="{x:Bind}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Right Panel -->
            <Grid Grid.Column="1" Margin="10">
                <Border CornerRadius="5" Background="#40000000" Padding="10">
                    <ScrollViewer>
                        <Grid>
                            <TextBlock Text="No users found" 
                                       Foreground="White" 
                                       FontSize="18" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,0,0"
                                       Visibility="{x:Bind ViewModel.NoUsersFoundMessage}"/>
                            <ItemsControl ItemsSource="{x:Bind ViewModel.DisplayedUsers, Mode=OneWay}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="local:User">
                                        <Border Background="#60000000" 
                                                CornerRadius="3" 
                                                Padding="15" 
                                                Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Width="50" Height="50" CornerRadius="25" Background="#30FFFFFF"/>
                                                <TextBlock Text="{x:Bind UserName}"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"
                                                           FontWeight="SemiBold"
                                                           FontSize="16"
                                                           Margin="15,0,0,0"
                                                           Grid.Column="1"/>
                                                <Button Content="Add Friend" 
                                                        Grid.Column="2"
                                                        Background="Black" 
                                                        Foreground="White"
                                                        Padding="10,5"
                                                        Margin="0,0,5,0"
                                                        BorderThickness="0"
                                                        CornerRadius="3"
                                                        Click="SendFriendRequestButton_Click"
                                                        Tag="{x:Bind}"/>
                                                <Button Content="Invite to Chat" 
                                                        Grid.Column="3"
                                                        Background="Black" 
                                                        Foreground="White"
                                                        Padding="10,5"
                                                        BorderThickness="0"
                                                        CornerRadius="3"
                                                        Click="MessageButton_Click"
                                                        Tag="{x:Bind}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>