<UserControl
    x:Class="News.CommentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:News"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:News.ViewModels">

    <UserControl.DataContext>
        <vm:CommentViewModel />
    </UserControl.DataContext>

    <Border 
        BorderBrush="#FFACC7" 
        BorderThickness="1" 
        CornerRadius="12" 
        Padding="12" 
        Background="#FFF0F5"
        Margin="0,0,0,8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Author Info -->
            <Grid Grid.Row="0" Background="#FFC2D9" CornerRadius="8" Padding="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Ellipse Grid.Column="0" Width="32" Height="32" Margin="0,0,8,0">
                    <Ellipse.Fill>
                        <ImageBrush Stretch="UniformToFill" ImageSource="{Binding ProfilePicture}"/>
                    </Ellipse.Fill>
                </Ellipse>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding Username}" FontWeight="SemiBold" Foreground="#D94C8A"/>
                    <TextBlock Text="{Binding CommentDate}" FontSize="12" Foreground="#333333"/>
                </StackPanel>
            </Grid>

            <!-- Comment Content -->
            <WebView2 
                x:Name="CommentContent" 
                Grid.Row="1" 
                Height="Auto" 
                MinHeight="60"
                Margin="0,8,0,0"
                Visibility="{Binding IsInEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0"
                        Visibility="{Binding IsInEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <Button Content="Edit"
                        Padding="8,4"
                        Margin="0,0,8,0"
                        Command="{Binding EditCommand}"
                        Visibility="{Binding IsEditVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                        Background="#D94C8A"
                        Foreground="White"
                        CornerRadius="15"/>

                <Button Content="Delete"
                        Padding="8,4"
                        Command="{Binding DeleteCommand}"
                        Visibility="{Binding IsDeleteVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                        Background="#FF4C70"
                        Foreground="White"
                        CornerRadius="15"/>
            </StackPanel>

            <!-- Edit Panel -->
            <Grid Grid.Row="3" x:Name="EditPanel" Visibility="{Binding IsInEditMode, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,8,0,0">
                <local:CommentInputControl x:Name="EditCommentInput" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
